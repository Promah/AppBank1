<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">


        <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:columnCount="2">

                <TextView
                        android:text="transactionFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transactionFrom"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="transactionTo"
                        android:ems="10"
                        android:id="@+id/transactionTo"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="transactionAmount"
                        android:ems="10"
                        android:id="@+id/transactionAmount"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="transactionTime"
                        android:ems="10"
                        android:id="@+id/transactionTime"/>
        </android.support.v7.widget.GridLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

</LinearLayout>